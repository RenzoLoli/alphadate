---
import Navbar from "@/components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="date ideas everywhere" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-700">
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: only dark;
  }

  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
  }

  body {
    width: 100dvw;
    height: 100dvh;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 120px 1fr;
  }
  
  main {
    overflow: hidden;
    overflow-y: auto;
  }

  label {
    font-size: 1.1rem;
  }

  input {
    width: 200px;
    font-size: 1rem;
    padding-left: 3px;
    padding-block: 2px;
  }

  input:enabled {
    color: black;
    background: white;
  }
</style>
